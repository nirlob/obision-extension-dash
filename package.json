{
  "name": "obision-extension-dash",
  "version": "1.0.0",
  "description": "A GNOME Shell extension for grid-based window management",
  "main": "extension.js",
  "scripts": {
    "build": "npm run compile-schemas && npm run pack",
    "compile-schemas": "glib-compile-schemas schemas/",
    "pack": "mkdir -p builddir && gnome-extensions pack --force --extra-source=schemas/ --out-dir=builddir",
    "install": "gnome-extensions install --force builddir/obision-extension-dash@obision.com.shell-extension.zip",
    "enable": "gnome-extensions enable obision-extension-dash@obision.com",
    "deploy": "npm run build && npm run install && echo '\n✓ Extension installed! Restart GNOME Shell:' && echo '  X11: Alt+F2 → type r → Enter' && echo '  Wayland: Log out and back in' && echo '\nThen run: npm run enable'",
    "reload": "./scripts/reload.sh",
    "update": "npm run build && npm run install && npm run reload",
    "deb-build": "./scripts/build-deb.sh",
    "clean": "rm -rf builddir schemas/gschemas.compiled",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{js,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{js,json,css,md}\"",
    "reset": "dconf reset -f /org/gnome/shell/extensions/obision-extension-dash/"
  },
  "keywords": [
    "gnome",
    "gnome-shell",
    "extension",
    "grid",
    "window-management"
  ],
  "author": "Jose Francisco Gonzalez <jfgs1609@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/nirlob/obision-extension-dash.git"
  },
  "bugs": {
    "url": "https://github.com/nirlob/obision-extension-dash/issues"
  },
  "homepage": "https://github.com/nirlob/obision-extension-dash#readme",
  "license": "GPL-3.0",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.0"
  }
}