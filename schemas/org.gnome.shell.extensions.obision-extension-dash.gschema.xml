<?xml version="1.0" encoding="UTF-8"?>
<schemalist>
  <schema id="org.gnome.shell.extensions.obision-extension-dash" path="/org/gnome/shell/extensions/obision-extension-dash/">
    
    <key name="dash-position" type="s">
      <default>"BOTTOM"</default>
      <summary>Dash position</summary>
      <description>Position of the dash panel (LEFT, RIGHT, TOP, BOTTOM)</description>
    </key>
    
    <key name="dash-size" type="i">
      <default>80</default>
      <range min="40" max="200"/>
      <summary>Dash size</summary>
      <description>Width (for left/right) or height (for top/bottom) of the dash in pixels</description>
    </key>
    
    <key name="icon-spacing" type="i">
      <default>0</default>
      <range min="0" max="32"/>
      <summary>Icon spacing</summary>
      <description>Space between icons in pixels</description>
    </key>
    
    <key name="panel-padding" type="i">
      <default>0</default>
      <range min="0" max="32"/>
      <summary>Panel padding</summary>
      <description>Padding between panel edge and icons in pixels</description>
    </key>
    
    <key name="auto-hide" type="b">
      <default>false</default>
      <summary>Auto-hide dash</summary>
      <description>Hide dash when not in use</description>
    </key>
    
    <key name="toggle-dash" type="as">
      <default>["&lt;Super&gt;d"]</default>
      <summary>Toggle dash visibility</summary>
      <description>Keyboard shortcut to toggle dash visibility</description>
    </key>
    
    <key name="transparent-background" type="b">
      <default>false</default>
      <summary>Transparent background</summary>
      <description>Make panel background transparent</description>
    </key>
    
    <key name="background-color" type="s">
      <default>"rgba(0,0,0,0.8)"</default>
      <summary>Background color</summary>
      <description>Solid background color for the panel</description>
    </key>
    
    <key name="date-position" type="s">
      <default>"left"</default>
      <summary>Date position</summary>
      <description>Position of the date in top bar (left, down)</description>
    </key>
    
    <key name="date-spacing" type="i">
      <default>5</default>
      <range min="0" max="50"/>
      <summary>Date spacing</summary>
      <description>Vertical space between icons and date in pixels</description>
    </key>
    
    <key name="time-font-size" type="i">
      <default>20</default>
      <range min="8" max="30"/>
      <summary>Time font size</summary>
      <description>Font size for time text in pixels</description>
    </key>
    
    <key name="time-font-bold" type="b">
      <default>false</default>
      <summary>Time font bold</summary>
      <description>Make time text bold</description>
    </key>
    
    <key name="date-font-size" type="i">
      <default>15</default>
      <range min="8" max="30"/>
      <summary>Date font size</summary>
      <description>Font size for date text in pixels</description>
    </key>
    
    <key name="date-font-bold" type="b">
      <default>false</default>
      <summary>Date font bold</summary>
      <description>Make date text bold</description>
    </key>
    
    <key name="time-visible" type="b">
      <default>true</default>
      <summary>Show time</summary>
      <description>Show or hide the time display</description>
    </key>
    
    <key name="date-visible" type="b">
      <default>true</default>
      <summary>Show date</summary>
      <description>Show or hide the date display</description>
    </key>
    
    <key name="date-show-year" type="b">
      <default>true</default>
      <summary>Show year in date</summary>
      <description>Display the year in the date format</description>
    </key>
    
    <key name="system-icon-size" type="i">
      <default>20</default>
      <range min="12" max="32"/>
      <summary>System icon size</summary>
      <description>Size of system panel icons in pixels</description>
    </key>
    
    <key name="system-icon-margins" type="i">
      <default>5</default>
      <range min="0" max="20"/>
      <summary>System icon margins</summary>
      <description>Margin applied to left and right of each system icon in pixels</description>
    </key>
    
  </schema>
</schemalist>
